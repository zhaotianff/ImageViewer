<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DicomViewCtrl.Controls"
    xmlns:converters="clr-namespace:DicomViewCtrl.Converters"
    xmlns:local="clr-namespace:DicomViewCtrl">

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></converters:BoolToVisibilityConverter>
    <converters:BoolInvertToVisibilityConverter x:Key="BoolInvertToVisibilityConverter"></converters:BoolInvertToVisibilityConverter>

    <Style TargetType="{x:Type controls:AnnotationControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AnnotationControl}">
                    <Border Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}" IsHitTestVisible="{Binding EditMode,RelativeSource={RelativeSource TemplatedParent}}">
                        <Grid>
                            <Grid x:Name="Part_ReadOnly" Visibility="{Binding EditMode,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BoolInvertToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding AnnotationList,RelativeSource={RelativeSource TemplatedParent}}" Background="Transparent" BorderThickness="0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel Margin="0,3,0,0">
                                                <TextBlock Text="{Binding Description}" Visibility="{Binding ShowDescription,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl},Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                                <TextBlock Text=" : "  Visibility="{Binding ShowDescription,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl},Converter={StaticResource BoolToVisibilityConverter}}"  Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                                <TextBlock Text="{Binding Value}" Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            <Grid x:Name="Part_Edit" Visibility="{Binding EditMode,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BoolToVisibilityConverter}}">
                                <ListBox ItemsSource="{Binding AnnotationList,RelativeSource={RelativeSource TemplatedParent}}" Background="Transparent" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Description}" Visibility="{Binding ShowDescription,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl},Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                                <TextBlock Text=" : "  Visibility="{Binding ShowDescription,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl},Converter={StaticResource BoolToVisibilityConverter}}"  Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                                <TextBlock Text="{Binding Value}" Foreground="{Binding AnnotationForeground,RelativeSource={RelativeSource AncestorType=controls:AnnotationControl}}"></TextBlock>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
